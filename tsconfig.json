{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@layout/*": ["./src/layout/*"],
      "@config/*": ["./src/config/*"],
      "@context/*": ["./src/context/*"],
      "@languages/*": ["./src/languages/*"],
      "@lib/*": ["./src/lib/*"],
      "@styles/*": ["./styles/*"],
      "@src/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src", "config"],
  "exclude": ["node_modules"]
}
